{
  "name": "@opcjs/zoro-plugin",
  "version": "3.0.0-beta0",
  "description": "the plugin for zoro",
  "main": "dist/zoro-plugin.umd.js",
  "module": "dist/zoro-plugin.es.js",
  "types": "src/plugin.d.ts",
  "keywords": [
    "zoro",
    "plugin"
  ],
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production rollup --config rollup.config.ts && rollup --config rollup.config.weapp.ts",
    "clean": "rm -rf ./dist",
    "release": "npm run lint && npm run build && npm publish --access=public",
    "beta": "npm run lint && npm run build && npm publish --tag=beta",
    "lint": "eslint src --fix --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FaureWu/zoro-plugin.git"
  },
  "author": "Faure Wu <502556093@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FaureWu/zoro-plugin/issues"
  },
  "homepage": "https://github.com/FaureWu/zoro-plugin",
  "directories": {
    "doc": "doc"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@opcjs/zoro": "^3.0.0-beta3",
    "@types/prettier": "^1.16.4",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "commitizen": "^3.1.1",
    "conventional-changelog": "^3.1.8",
    "conventional-changelog-cli": "^2.0.21",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-replace-string": "^0.6.1",
    "husky": "^2.4.0",
    "prettier": "^1.18.2",
    "rollup": "^1.14.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
