{
  "name": "@opcjs/zoro-plugin",
  "version": "2.2.1",
  "description": "the plugin for zoro",
  "main": "dist/zoro-plugin.umd.js",
  "module": "dist/zoro-plugin.es.js",
  "keywords": [
    "zoro",
    "plugin"
  ],
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production rollup --config rollup.config.js && rollup --config rollup.config.weapp.js",
    "clean": "rm -rf ./dist",
    "release": "npm run lint && npm run build && npm publish --access=public",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FaureWu/zoro-plugin.git"
  },
  "author": "Faure Wu <502556093@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FaureWu/zoro-plugin/issues"
  },
  "homepage": "https://github.com/FaureWu/zoro-plugin",
  "directories": {
    "doc": "doc"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^24.8.0",
    "commitizen": "^3.1.1",
    "conventional-changelog": "^3.1.8",
    "conventional-changelog-cli": "^2.0.21",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "rollup": "^1.14.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
